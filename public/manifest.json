    }
  ],
  "shortcuts": [
    {
      "name": "Search Schemes",
      "short_name": "Search",
      "description": "Find government schemes quickly",
      "url": "/schemes?search=true",
      "icons": [
        {
          "src": "/icons/search-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Chat Assistant", 
      "short_name": "Chat",
      "description": "Get help from AI assistant",
      "url": "/chat",
      "icons": [
        {
          "src": "/icons/chat-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Applications",
      "short_name": "Applications",
      "description": "View your scheme applications",
      "url": "/profile?tab=applications",
      "icons": [
        {
          "src": "/icons/applications-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voice Search",
      "short_name": "Voice",
      "description": "Search using voice commands",
      "url": "/voice",
      "icons": [
        {
          "src": "/icons/voice-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=gov.india.schemes.saathi",
      "id": "gov.india.schemes.saathi"
    }
  ],
  "prefer_related_applications": false,
  "features": [
    "Cross Platform",
    "Background Sync",
    "Push Notifications",
    "Offline Support",
    "Voice Search",
    "Multilingual Support",
    "AI Assistant",
    "Real-time Updates"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+scheme",
      "url": "/scheme/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "application/pdf": [".pdf"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}
